<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    tools:context=".activities.fragments.NewPost">

    <TextView
        android:id="@+id/tvNewPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Post"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="#4E57D3"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/et_newPost"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="16sp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="40dp"
        android:hint="Pensando em algo?"
        android:background="@drawable/bg_edittext"
        android:textColorHint="#BABABA"
        android:backgroundTint="#1F2533"
        android:gravity="start"
        android:inputType="textMultiLine|textCapSentences"
        android:maxWidth="30dp"
        android:maxLength="250"
        android:maxLines="7"
        android:paddingLeft="10dp"
        android:paddingTop="16dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvNewPost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>